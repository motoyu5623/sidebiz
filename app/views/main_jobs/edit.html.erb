<% provide(:title, "本業") %>
<div class="container">
  <div class="page-title">
    <h2>本業情報の編集</h2>
  </div>
  <%= form_with(model: @job, url: main_job_path, local:true, class:"job-new-field") do |f| %>
    <%= render "shared/common_form", {job:@job, f:f} %>

    <%= f.hidden_field :user_id, :value => current_user.id %>
    <div class="btn-submit">
      <%= f.submit '更新する', class:"btn btn-dark" %>
      <%= link_to "削除する", side_job_path(@job), method: :delete, data: { confirm: '削除してよろしいですか？'}, class:"btn btn-light"  %>
    </div>
  <% end %>
</div>