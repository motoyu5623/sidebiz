<% if user_signed_in? %>
  <% if current_user == job.user %>
    <span class="edit_or_delete mr-5">
      <%= link_to  edit_side_job_path(job), id: :"button-edit-#{job.id}" do %>
        <i class="fas fa-edit"></i>
      <% end %>
      <%= link_to side_job_path(job), id: :"button-delete-#{job.id}", method: :delete, data: { confirm: '削除してよろしいですか？'} do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    </span>
  <% end %>
    <span id="stock_btn_<%= job.id %>">
      <%= render 'shared/stock_area', job: job %>
    </span>
    <span id="stock_count_<%= job.id %>">
      <%= job.stocks.count %>
    </span>

<% end %>
