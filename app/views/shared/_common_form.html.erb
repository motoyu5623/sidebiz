<% if job.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

    <ul>
      <% job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field row">
  <span class="field-left text-md-right col-12 col-md-4">
    <%= f.label yield(:title) %>名
    <span class="required-tag">必須</span>
  </span>
  <span class="field-right col-12 col-md-8 col-lg-7"><%= f.text_field :name, class:"input-form", required: true  %></span>
</div>

<div class="field row">
  <span class="field-left text-md-right col-12 col-md-4"><%= f.label '労働形態' %></span>
