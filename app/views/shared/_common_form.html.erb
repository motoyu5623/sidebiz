  <span class="field-right col-12 col-md-8 col-lg-7"><%= f.text_field :medium, class:"input-form" %><br><small>SEO、SNS、紹介、セミナー、ダイレクトメール、等</small></span>
  
</div>
<hr>

<div class="field row">
  <span class="field-left text-md-right col-12 col-md-4"><%= f.label "業種" %></span>
  <span class="field-right col-12 col-md-8 col-lg-7"><%= f.text_field :industry, class:"input-form"  %></span>
</div>

<%# false内は非表示 %>
<% if false %>
        <div class="field row">
          <span class="field-left text-md-right col-12 col-md-4"><%= f.label "職種" %></span>
          <span class="field-right col-12 col-md-8 col-lg-7"><%= f.text_field :occupation, class:"input-form" %></span>
        </div>
<% end %>

<div class="field row">
  <span class="field-left text-md-right col-12 col-md-4"><%= f.label "開始年月" %></span>
  <span class="field-right col-12 col-md-8 col-lg-7">
    <%= raw sprintf(f.date_select(:started_at,
                                  {use_month_numbers: true,
                                  date_separator: '%s',
                                  start_year: 1930,
                                  end_year: Time.now.year,
                                  default: Date.new(2016, 1, 1),
                                  discard_day: true},
                                  class:"input-form-select"),
                    '年') + '月' %>
  </span>
</div>

<div class="field row">
  <span class="field-left text-md-right col-12 col-md-4"><%= f.label '労働時間(週)' %></span>
  <span class="field-right col-12 col-md-8 col-lg-7">
    <%= f.select(:worktime_week, { '〜5時間' => '〜5時間' , '5〜10時間' => '5〜10時間',
    '10〜15時間' => '10〜15時間' , '15〜20時間' => '15〜20時間' , '20〜25時間' => '20〜25時間' ,
    '25〜30時間' => '25〜30時間' , '30〜35時間' => '30〜35時間' , '35〜40時間' => '35〜40時間' ,
    '40〜45時間' => '40〜45時間' , '45時間〜' => '45時間〜' } , {}, class:"input-form-select") %></span>
</div>

<div class="field row">
  <span class="field-left text-md-right col-12 col-md-4"><%= f.label '平均月収' %></span>
  <span class="field-right col-12 col-md-8 col-lg-7"><%= f.select(:income_month, {'〜1万円'=> '〜1万円', '1〜5万円'=>'1〜5万円', '5〜10万円'=>'5〜10万円', '10〜20万円'=>'10〜20万円', '20〜30万円'=>'20〜30万円', '30〜50万円'=>'30〜50万円', '50万円以上'=>'50万円以上'}, {}, class:"input-form-select") %></span>
</div>

<div class="field row">
  <span class="field-left text-md-right col-12 col-md-4">
    <%= f.label '主な業務内容' %>
    <span class="required-tag">必須</span>
  </span>
  <span class="field-right col-12 col-md-8 col-lg-7"><%= f.text_area :description, class:"input-form-large", required: true %></span>
