<% provide(:title, "副業") %>
<div class="container">
  <div class="page-title">
    <h2>副業レビューの投稿</h2>
  </div>
  <%= form_with(model: @side_job, local:true, class:"job-new-field container") do |f| %>
    <%= render "shared/common_form", {job:@side_job, f:f} %>
    <%= render "shared/common_form_for_side_job", {job:@side_job, f:f} %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <div class="btn-submit">
      <%= f.submit '登録する', class:"btn btn-dark" %>
    </div>
  <% end %>
</div>

<script type="text/javascript">
  $(document).ready(function(){
      $('#link-side-job-new').addClass('active');
  });
</script>