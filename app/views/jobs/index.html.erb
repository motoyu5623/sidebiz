<h2>副業レビュー一覧</h2>
<i class="fab fa-facebook-f fa-3x mx-2"></i>
<%= fa_icon "baby", text: "BB", class: 'mx-2', size: '3x' %>
<br>
<% @jobs.each do |job| %>
<div class="card">
  <div class="card-body">
    <div class="name_holder_sm">
      <%= job.user.username %>
    </div>
    <%= image_tag '/noimage.png', :size => '100x100' %>
    <span>本業：</span>
    <span>
      <%=  job.user.main_job.name %>
    </span>
    <span>→　　副業：</span>
    <span>
      <%= link_to job.name, job_path(job) %>
    </span>
  </div>
</div>
<% end %>

<div class="row justify-content-center pagination-box">
  <%= paginate @jobs %>
</div>