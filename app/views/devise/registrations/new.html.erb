<div class="container">
  <div class="page-title">
  </div>
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10 ">
      <div class="input-field">
        <h2 class="field-title">新規登録</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field row">
            <span class="text-md-right col-12 col-md-4"><%= f.label 'ユーザーネーム' %> </span>
            <span class="col-12 col-md-8 col-lg-7"><%= f.text_field :username, autofocus: true, autocomplete: "username", class:"input-form", required: true  %></span>
          </div>

          <div class="field row">
            <span class="text-md-right col-12 col-md-4"><%= f.label 'メールアドレス' %></span>
            <span class="col-12 col-md-8 col-lg-7"><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input-form", required: true    %></span>
          </div>

          <div class="field row">
            <span class="text-md-right col-12 col-md-4"><%= f.label 'パスワード' %>
            <% if @minimum_password_length %>
            <% end %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            </span>
            <span class="col-12 col-md-8 col-lg-7"><%= f.password_field :password, autocomplete: "new-password", class:"input-form", required: true   %><br>
            </span>
          </div>

          <div class="field row">
            <span class="text-md-right col-12 col-md-4"><%= f.label 'パスワード（確認）' %></span>
            <span class="col-12 col-md-8 col-lg-7"><%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input-form", required: true    %></span>
          </div>

          <div class="actions">
            <div class="btn-submit">
              <%= f.submit '登録する', class:"btn btn-dark" %>
            </div>
          </div>
        <% end %>

        <div class="devise-link-area">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
      $('#link-signup').addClass('active');
  });
</script>