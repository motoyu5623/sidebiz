<div class="container">
  <div class="page-title">
  </div>
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10 ">
      <div class="job-new-field">
        <h2 class="area-title">ログイン</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field row">
            <span class="field-left text-md-right col-12 col-md-4"><%= f.label 'メールアドレス' %></span>
            <span class="field-right col-12 col-md-8"><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input-form" %></span>
          </div>

          <div class="field row">
            <span class="field-left text-md-right col-12 col-md-4"><%= f.label 'パスワード' %></span>
            <span class="field-right col-12 col-md-8"><%= f.password_field :password, autocomplete: "current-password", class:"input-form" %></span>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field row">
              <span class="field-right col-12 col-md-8 offset-md-4">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </span>
            </div>
          <% end %>

          <div class="actions">
            <div class="btn-submit">
              <%= f.submit 'ログインする', class:"btn btn-dark" %>
            </div>
          </div>
        <% end %>

        <div class="devise-link-area">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>